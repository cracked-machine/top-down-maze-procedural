{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpriteMetaData Schema",
  "description": "Schema for sprite metadata configuration using enum names as keys",
  "type": "object",
  "properties": {
    "sprites": {
      "type": "object",
      "description": "Map of sprite enum names to their metadata",
      "patternProperties": {
        "^[A-Za-z0-9_.]+$": {
          "$ref": "#/definitions/spriteMetadata"
        }
      },
     
      "additionalProperties": false
    }
  },
  "required": ["sprites"],
  "additionalProperties": false,
  "definitions": {
    "spriteMetadata": {
      "type": "object",
      "description": "Metadata for a single sprite type",
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable sprite name",
          "minLength": 1
        },
        "weight": {
          "type": "number",
          "description": "Weight for random selection",
          "minimum": 0
        },
        "multisprite": {
          "type": "object",
          "description": "MultiSprite configuration",
          "properties": {
            "sprites_per_frame": {
              "type": "integer",
              "description": "Number of sprites in each animation frame.",
              "minimum": 1
            },
            "sprites_per_sequence": {
              "type": "integer",
              "description": "Total number of sprites in the animation sequence. 1 = static sprite.",
              "minimum": 1
            },
            "grid_size": {
              "type": "object",
              "description": "width and height grid size for the multi-sprite",
              "properties": {
                "width": {
                  "type": "integer",
                  "minimum": 1
                },
                "height": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "minItems": 2,
              "maxItems": 2
            },
            "texture_path": {
              "type": "string",
              "description": "Path to the texture file",
              "pattern": "^res/textures/.*\\.(png|jpg|jpeg|bmp|tga)$"
            },
            "solid_mask": {
              "type": "array",
              "description": "Indicates which 'sprite_indices' the player cannot traverse. Array size must match sprite_indices size.",
              "items": {
                "type": "boolean"
              },
              "minItems": 1,
              "uniqueItems": false
            },
            "sprite_indices": {
              "type": "array",
              "description": "Array of sprite indices in the texture",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 1,
              "uniqueItems": true
            }
          },
          "required": ["texture_path", "sprite_indices", "grid_size", "sprites_per_frame", "sprites_per_sequence"],
          "additionalProperties": false
        }
      },
      "required": ["name", "weight", "multisprite"],
      "additionalProperties": false
    }
  }
}